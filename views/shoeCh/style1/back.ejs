    <title>
        <%= title %>
    </title>
</head>

<body>
    <%- include('../../Layout/NavBar') %>
        <div class="container-fluid">
            <div class="row">
                <div class="col-6 img">
                    <img id="back" src="/images/kids/style1/png/back.png" alt="shoe">
                </div>

                <div class="col-6" style="margin-top: 3%;">
                    <div class="text-center">
                        <h1>แถบช่วยสวมที่ส้น</h1>
                    </div>
                    <div class="text-center" style="margin: 2%; margin-top: 15%;">
                        <button class="btn text" style="width: 150px; height: 100px; border-radius: 30px;" id="color" onclick="choose_color()">เลือกเป็นสี</button>
                        <button class="btn text" style="width: 150px; height: 100px; border-radius: 30px;" id="leather" onclick="choose_leather('<%- leather %>')">เลือกเป็นหนัง</button>
                    </div>
                    <div>
                        <input id="changeColor" style="display: none; width: 250px; margin-left: 31%;" type="text"
                            class="form-control jscolor {onFineChange:'changeColor(this)'} butt1"
                            placeholder="changeColor" aria-label="changeColor" aria-describedby="addon-wrapping"
                            value="DBED64">
                    </div>

                    <div id="leatherColor" class="row" style="margin-left: 70px; display: none;">
                        <div class="col"><button class="leatherColor" id="black_leather"
                                onclick="leather_colors('000000')"></button>
                        </div>
                        <div class="col"><button class="leatherColor" id="chocolate_leather"
                                onclick="leather_colors('3F2C25')"></button>
                        </div>
                        <div class="col"><button class="leatherColor" id="darkbrown_leather"
                                onclick="leather_colors('572D1D')"></button>
                        </div>
                        <div class="col"><button class="leatherColor" id="brown_leather"
                                onclick="leather_colors('B16217')"></button>
                        </div>
                        <div class="col"><button class="leatherColor" id="lightbrown_leather"
                                onclick="leather_colors('D79443')"></button></div>
                    </div>

                    <div class="text-end" style="margin-top: 10%;">
                        <button class="btn btn-primary" onclick="butNext()">ถัดไป</button>
                    </div>
                </div>
            </div>

            <!-- <DIV class="space"></DIV> -->
        </div>


        <script src="https://cdn.jsdelivr.net/npm/pickr-widget/dist/pickr.min.js"></script>
        <script src="/javascripts/shoeCh/style1/back.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"
